                <Border x:Name="C5" Background="Gray" BorderBrush="Black" BorderThickness="1" MouseDown="Square_MouseDown"/>
                <Border x:Name="D5" Background="White" BorderBrush="Black" BorderThickness="1" MouseDown="Square_MouseDown"/>
